
@model Travel.Models.ContactModels
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home Page";
}

    <!-- Carousel -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <div class="carousel-title-background page-1">
                </div>
                <div class="carousel-caption carousel-title-frame">
                    <div class="carousel-title">
                        <p>Discover</p>
                        <h1>Greece</h1>
                    </div>
                    <div class="carousel-title-footer">
                        <p>from only <b id="promo">£99*</b></p>
                        <button type="button" onclick="location.href='@Url.Action("TravelDescription","Sites")?id=12'" class="btn btn-danger carousel-button btn-md hidden-smb visible-mdb">CHECK OUT MORE</button>
                        <button type="button" onclick="location.href='@Url.Action("TravelDescription","Sites")?id=12'" class="btn btn-danger carousel-button btn-sm hidden-mdb">CHECK OUT MORE</button>
                    </div>
                </div>
                <img class="carousel-img" src="@Url.Content("~/Content/Images/Greece.jpg")" alt="Greece">

            </div>

            <div class="item">
                <img class="carousel-img" src="@Url.Content("~/Content/Images/Croatia.jpg")" alt="Croatia">
                <div class="carousel-title-background page-2">
                </div>
                <div class="carousel-caption carousel-title-frame">
                    <div class="carousel-title">
                        <p>Discover</p>
                        <h1>Croatia</h1>
                    </div>
                    <div class="carousel-title-footer">
                        <p>from only <b id="promo">£99*</b></p>
                        <button type="button" onclick="location.href='@Url.Action("TravelDescription","Sites")?id=6'" class="btn btn-danger carousel-button btn-md hidden-smb visible-mdb">CHECK OUT MORE</button>
                        <button type="button" onclick="location.href='@Url.Action("TravelDescription","Sites")?id=6'" class="btn btn-danger carousel-button btn-sm hidden-mdb">CHECK OUT MORE</button>
                    </div>
                </div>
            </div>

            <div class="item">
                <img class="carousel-img" src="@Url.Content("~/Content/Images/Egipt.jpg")" alt="Egipt">"
                <div class="carousel-title-background page-3">
                </div>
                <div class="carousel-caption carousel-title-frame">
                    <div class="carousel-title">
                        <p>Discover</p>
                        <h1>Egipt</h1>
                    </div>
                    <div class="carousel-title-footer">
                        <p>from only <b id="promo">£99*</b></p>
                        <button type="button" onclick="location.href='@Url.Action("TravelDescription","Sites")?id=13'" class="btn btn-danger carousel-button btn-md hidden-smb visible-mdb">CHECK OUT MORE</button>
                        <button type="button" onclick="location.href='@Url.Action("TravelDescription","Sites")?id=13'" class="btn btn-danger carousel-button btn-sm hidden-mdb">CHECK OUT MORE</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!-- Destinations -->
    <div id="destinations" class="container-fluid containers">
        <div class="text-center">
            <h2>Our DESTINATIONS - Have wonderful time in...</h2>
            <br>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="panel panel-home panel-default text-center slideanim">
                    <div class="panel-heading-home">
                        <h1>Europe</h1>
                    </div>
                    <div class="panel-body-home">
                        <img class="img-pannel" src="@Url.Content("~/Content/Images/Europe.jpg")" alt="Europe">
                    </div>
                    <div class="panel-footer-home">
                        <h3>See our 47 amazing offers in Europe</h3>
                        <button onclick="location.href='@Url.Action("Index","Destinations")/index?sitedestination=europe'" class="btn btn-lg">View more</button>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="panel panel-home panel-primary text-center slideanim">
                    <div class="panel-heading-home">
                        <h1>Africa</h1>
                    </div>
                    <div class="panel-body-home">
                        <img class="img-pannel" src="@Url.Content("~/Content/Images/Africa.jpg")" alt="Africa">
                    </div>
                    <div class="panel-footer-home">
                        <h3>Discover savanna with us!</h3>
                        <button onclick="location.href='@Url.Action("Index","Destinations")/index?sitedestination=north africa'"  class="btn btn-lg">View more</button>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="panel panel-home panel-default text-center slideanim">
                    <div class="panel-heading-home">
                        <h1>Canary Islands</h1>
                    </div>
                    <div class="panel-body-home">
                        <img class="img-pannel" src="@Url.Content("~/Content/Images/canary.jpg")" alt="Canary">
                    </div>
                    <div class="panel-footer-home">
                        <h3>Fly to the most beautiful islands<br> in the world</h3>
                        <button onclick="location.href='@Url.Action("Index","Destinations")/index?sitedestination=canary islands'" class="btn btn-lg">View more</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- About -->
    <div id="about" class="container containers bg-about">
        <div class="col-sm-3 center">
            <img src="@Url.Content("~/Content/Images/holiday.png")" id="img-holiday" class="img-circle slideanim" alt="Holiday">
        </div>
        <div class="col-sm-9 text-left padding">
            <br><h2>Who We Are?</h2><br>
            <p>
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi in tincidunt mi. Aliquam velit justo, ornare quis molestie vitae, porttitor in turpis. Quisque ac nulla maximus ligula vulputate cursus sed ut ex. Suspendisse potenti. Nam tellus enim, pulvinar non erat sed, aliquet venenatis nulla. Nulla id velit et lectus tristique congue. Aliquam viverra ullamcorper ipsum, eu semper odio sagittis mattis.
            </p>
        </div>
    </div>

    <!-- Contact -->
    <div id="contact" class="container-fluid containers bg-contact">
        <h2 class="text-center">CONTACT</h2><br>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <div class="row">
                <div class="col-sm-5">
                    <p>Contact us and we'll get back to you within 24 hours.</p>
                    <p><span class="glyphicon glyphicon-map-marker"></span> Sittingbourne, UK</p>
                    <p><span class="glyphicon glyphicon-phone"></span> 07459470915</p>
                    <p><span class="glyphicon glyphicon-envelope"></span> sdportfolio.travel@gmail.com</p>
                </div>
                <div class="col-sm-7">
                        <div class="row form-group">
                            <div class="col-sm-6 form-group">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </div>
                            @Html.TextAreaFor(model => model.Comment, new { @class = "form-control", @placeholder = "Message", @rows = "5" })
                            @Html.ValidationMessageFor(model => model.Comment)
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <br />
                    <button class="btn btn-default pull-right" type="submit">Send</button>
                </div>
            </div>
        }
    </div>

    <!-- Map -->

    <div id="map"></div>
    <script>
      var map;
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: 51.339721, lng: 0.737713},
          zoom: 12,
		  scrollwheel:false,
		  draggable:false
        });
      }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAQ3v0GDvgYlzvtaZaZy41PK0MQ3QADR04&callback=initMap"
            async defer></script>

