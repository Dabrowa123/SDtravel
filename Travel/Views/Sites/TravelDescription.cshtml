
@model Travel.Models.Site



@{
    ViewBag.Title = "Travel Description";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


        <br>
        <br>
        <br>
        <br>
 
<div class="row">
    <div class="col-sm-offset-1 col-sm-7">
        <div class="panel panel-default panel-description panel-description-carousel">
            <div class="panel-heading">
                <h3>@Html.DisplayFor(Model => Model.SiteName)</h3>
                <h5>@Html.DisplayFor(Model => Model.SiteLocation) - @Html.DisplayFor(Model => Model.SiteDestination)</h5>
            </div>
            <div class="panel-body">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">

                        @{ List<string> URL = new List<string>();
                            URL = ViewData["PicturesURL"] as List<string>;


                            for (int i = 0; i < URL.Count; i++)
                            {
                                <div class="item @if (i == 0) {<text>active</text>} ">
                                    <img class="img-responsive" src="@Url.Content(URL[i])" alt="Chania">
                                </div>
                            }
                        }
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="panel panel-default panel-description panel-body">
            <h3>Your Hotel</h3>
            <p>@Html.DisplayFor(Model => Model.SiteDescription)</p>
            <h4>Location</h4>
            <p>@Html.DisplayFor(Model => Model.SiteDescription)</p>
            <h4>What's included in the All Inclusive package?</h4>
            <p>@Html.DisplayFor(Model => Model.SiteDescription)</p>
            <h4>General Room Information</h4>
            <p>@Html.DisplayFor(Model => Model.SiteDescription)</p>
        </div>
    </div>
